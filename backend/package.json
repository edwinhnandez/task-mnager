{
    "name": "task-manager-backend",
    "version": "1.0.0",
    "description": "Backend API for Task Manager",
    "main": "src/server.js",
    "scripts": {
      "start": "node src/server.js",
      "dev": "nodemon src/server.js",
      "test": "jest --verbose --coverage",
      "test:watch": "jest --watch",
      "test:ci": "jest --ci --coverage --maxWorkers=2"
    },
    "dependencies": {
      "express": "^4.18.2",
      "cors": "^2.8.5",
      "uuid": "^9.0.0"
    },
    "devDependencies": {
      "nodemon": "^3.0.1",
      "jest": "^29.7.0",
      "supertest": "^6.3.3",
      "@types/jest": "^29.5.8"
    },
    "jest": {
      "testEnvironment": "node",
      "coverageDirectory": "coverage",
      "collectCoverageFrom": [
        "src/**/*.js",
        "!src/server.js",
        "!**/node_modules/**",
        "!**/coverage/**",
        "!jest.config.js"
      ],
      "coverageThreshold": {
        "global": {
          "branches": 80,
          "functions": 80,
          "lines": 80,
          "statements": 80
        }
      },
      "testMatch": [
        "**/__tests__/**/*.test.js",
        "**/*.test.js"
      ]
    }
  }